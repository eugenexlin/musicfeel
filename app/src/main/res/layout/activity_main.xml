<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp" tools:context=".MusicListActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="We have been denied permission to use MediaStore to fetch music. x_x"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:id="@+id/tvWarn"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvSongs">


        </ListView>


    </LinearLayout>

</RelativeLayout>
